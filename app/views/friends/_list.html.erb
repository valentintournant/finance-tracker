<div class="seach-area">
  <h3>Search Friends</h3>
  <%= form_tag search_friend_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :friend, params[:friend], placeholder: "Name or Email", autofocus: true, class: "form-control form-control-large" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
        <%= fa_icon 'search 1x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div id="results">
</div>

<div class="row">
  <div class="col-9">
    <table class="table table-bordered table-dark table-hover">
      <thead>
        <tr>
          <th scope="col">Email</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><%= friend.email %></td>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %></td>
            <td><%= link_to 'View profil', user_path(friend),
                                          class: 'btn btn-sm btn-success' %>
                <%= link_to 'Stop following', friendship_path(friend), method: :delete, data: {confirm:'Are your sure?'},
                                          class: 'btn btn-sm btn-warning' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
